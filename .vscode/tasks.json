{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "setup build",
      "type": "shell",
      "command": "mkdir -p '${workspaceFolder}/build' && cd '${workspaceFolder}/build' && cmake .. && make . -j8",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "make -j8",
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}/build/wui_example"
    },
    {
      "label": "build and run",
      "type": "shell",
      "dependsOn": ["build"],
      "command": "${workspaceFolder}/build/wui_example",
      "problemMatcher": ["$gcc"]
    }
  ]
}
